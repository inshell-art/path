# ---- Who signs (admin/owner) ----
# Must match a [sncast.*] profile in your snforge.toml
ADMIN_PROFILE="sepolia_deployer"
# Leave blank to auto-derive from ADMIN_PROFILE & SNCAST_ACCOUNTS_FILE
ADMIN_ADDRESS=""

# ---- Role IDs (leave blank to auto-compute via keccak(name) % prime) ----
MINTER_ROLE_ID=""
SALES_ROLE_ID=""

# ---- NFT constructor ----
NFT_NAME="PATH"
NFT_SYMBOL="PATH"
NFT_BASE_URI=""

# ---- Minter constructor ----
# FIRST_TOKEN_ID is u256 (decimal or 0x...). Script splits to (low, high).
FIRST_TOKEN_ID=1
RESERVED_CAP=0

# ---- PulseAuction constructor (values expressed in STRK; deploy script -> fri) ----
OPEN_DELAY=0
K_DEC=1000000
GENESIS_P_DEC=10000
FLOOR_DEC=1000
PTS=1
# IMPORTANT: set these in scripts/params.sepolia.local before deploying.
PAYTOKEN=""
TREASURY=""

# ---- Optional: reuse already-deployed glyph contracts ----
# If set, deploy script will skip deploying these and use the provided addresses.
PPRF_ADDR=""
STEP_CURVE_ADDR=""
